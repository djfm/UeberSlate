<%= form_for(@pack, :html => {:multipart => true}) do |f| %>
	<% if @pack.errors.any? %>
		<div id="error_explanation">
			
		
			<ul>
				<% @pack.errors.full_messages.each do |msg| %>
				<li>
					<%= msg %>
				</li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<% if pid = params[:project_id] %>
		<%= f.hidden_field :project_id, :value => pid %>
	<% else %>
		<div class="field">
			<%= f.label :project_id %>
			<br />
			<%= f.select :project_id, options_for_select(@project_list, @pack.project_id) %>
		</div>
	<% end %>
	
	<div class="field">
		<%= f.label :name %>
		<br />
		<%= f.text_field :name %>
	</div>
	
	<div class="field">
		<%= label_tag :csv_file, "Add strings from CSV" %>
		<br />
		<%= file_field_tag :csv_file %>
	</div>
	
	<div class="field">
		<%= f.label :comment %>
		<br />
		<%= f.text_area :comment %>
	</div>
	<div class="actions">
		<%= f.submit %>
	</div>
<% end %>
