<%= form_for(@role_white_list) do |f| %>
  <% if @role_white_list.errors.any? %>
    <div id="error_explanation">
      <h2>Oops</h2>

      <ul>
      <% @role_white_list.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :role_id %><br />
    <%= f.number_field :role_id %>
  </div>
  <div class="field">
    <%= f.label :action %><br />
    <%= f.text_field :action %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
